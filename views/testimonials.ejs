<%- include('partials/header.ejs') %>
<%- include('partials/bubble.ejs') %>
    <div class="fixed-header-height"></div>
    <main>
        <section class="hero-section fm-testimonial-img">
            <div class="fm-container-default fm-h-100">
                <div class="fm-container-wrapper fm-h-100">
                    <h1>Our Customers Says</h1>
                    <p>Our clients love our services and the exceptional care they receive. Hear from those who have experienced the best in haircare and beauty treatments at our salon.</p>
                    <a class="fm-btn-primary" href="https://www.google.com/search?client=firefox-b-d&q=google+review+fademan#lrd=0x882b8b73123c77ad:0x8dfef0886caa42a3,1,,,," target="_blank">Go to Reviews</a>
                </div>
            </div>
        </section>

        <section class="fm-container-default fm-py-30">
            <% locals.testimonials.forEach((testimonial)=> { %>
                <div class="fm-review-card testimonial">
                    <h3>
                        <%= testimonial.heading %>
                    </h3>
                    <p>
                        <%= testimonial.body %>
                    </p>
                    <p>Rating: <span class="fm-star">
                            <% for (let i=0; i < testimonial.rating; i++) { %>
                                &#9733;
                                <% } %>
                        </span>
                        <%= testimonial.rating %> stars
                    </p>
                    <p><strong>
                            <%= testimonial.reviewer %>
                        </strong>, <%= testimonial.source %>
                    </p>
                </div>
                <% }); %>
        </section>
    </main>
    <%- include('partials/footer.ejs') %>